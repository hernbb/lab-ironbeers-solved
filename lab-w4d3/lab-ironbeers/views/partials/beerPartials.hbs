<div class='card-group'>
  <div class='card'>
    <img
      class='card-img-top'
      src='{{this.image_url}}'
      alt='{{this.name}}'
      style='max-width: 200px ; max-height: 400px '
    />
    <div class='card-body'>
      <h5 class='card-title'>{{this.name}}</h5>
      <p class='card-text'>{{this.description}}</p>
    </div>
    <div class='card-footer'>
      <small class='text-muted'>{{this.tagline}}</small>
    </div>
  </div>

</div>